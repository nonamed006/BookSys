<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<!-- 회원 가입 -->
	<insert id="insert" parameterType ="user">
		<![CDATA[
			insert into user values(null, #{id}, #{pwd}, #{name}, #{addr}, 'U')
		]]>
	</insert>
	<!-- jwt 로그인 -->
	<select id="findByIdAndPwd" parameterType = "map" resultType = "user">
		<![CDATA[
			select * from user where id = #{id} and pwd = #{pwd};
		]]>
	</select>
	<!-- id가 존재하는지 여부 확인 -->
	<select id="countById" parameterType = "String" resultType = "int">
		<![CDATA[
			select count(*) from user where id = #{id};
		]]>
	</select>
	<!-- 회원정보수정 -->
	<update id="update" parameterType="user">
	<![CDATA[
			update user set pwd = #{pwd}, addr = #{addr}
			where no = #{no}
		]]>
	</update>
	<!-- no로 user 찾기 -->
	<select id="findById" parameterType="int" resultType="user">
	<![CDATA[
		select * from user where no = #{no}
	]]>
	</select>
	<!-- 전체회원 조회 + 검색 -->
	<select id="findAll" parameterType="String" resultType="user">
	<![CDATA[
		select * from user where name like #{name}
	]]>
	</select>
	<!-- 관리자가 회원 삭제 -->
	<delete id="delete" parameterType ="int">
		<![CDATA[
			delete from user where no = #{no} 
			]]>
	</delete>
</mapper>